<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Race:</strong>
  <%= @pet.race %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @pet.birthdate %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Altura</th>
      <th>Peso</th>
    </tr>
  </thead>

  <tbody>
  <% @pet.pet_histories.each  do |pet_history| %>
    <tr>
      <td><%= pet_history.created_at %></td>
      <td><%= pet_history.heigth %></td>
      <td><%= pet_history.weight %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<table class="table">
  <thead>
    <tr>
      <th>Peso promedio</th>
      <th>Altura promedio</th>
      <th>Peso Máximo</th>
      <th>Altura Máxima</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @pet.avg_weight %></td>
      <td><%= @pet.avg_height %></td>
      <td><%= @pet.max_weight %></td>
      <td><%= @pet.max_height%></td>
    </tr>
  </tbody>
</table>

